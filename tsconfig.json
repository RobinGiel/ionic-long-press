{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "genDir": "dist"
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}